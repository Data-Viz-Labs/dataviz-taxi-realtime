# Terraform variables
# Copy this file to terraform.tfvars and fill in your values

project_name = "porto-taxi"
environment  = "prod"
aws_region   = "eu-south-2"

# Valid group names (comma-separated)
valid_groups = "group-alpha,group-beta,group-gamma"

# Container configuration
container_cpu    = 2048
container_memory = 4096

# ECS task counts
desired_count_normal = 1
desired_count_spot   = 2

# API Gateway cache TTL (seconds)
cache_ttl = 300

# Note: API key is auto-generated by Terraform
# Retrieve it with: terraform output -raw api_key
